@using Southwind.Entities

@using (var tc = Html.TypeContext<ApplicationConfigurationEntity>())
{
    @Html.ValueLine(tc, t => t.Environment)
    <fieldset id="email">
        <legend>Email</legend>
        @Html.EmbeddedControl(tc, c => c.Email)
        @Html.EntityLine(tc, c => c.SmtpConfiguration)
    </fieldset>
    <fieldset id="sms">
        <legend>SMS</legend>
        @Html.EmbeddedControl(tc, c => c.Sms)
    </fieldset>
}
